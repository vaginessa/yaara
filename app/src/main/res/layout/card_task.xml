<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/tv_task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="老友记.Friends.S03E24.中英字幕.BDrip.AAC.720P.x264.mp4"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="@id/pb_task_progress" />

        <ProgressBar
            android:id="@+id/pb_task_progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="25"
            app:layout_constraintTop_toBottomOf="@+id/tv_task_title"
            app:layout_constraintBottom_toTopOf="@id/tv_task_download_speed"/>

        <TextView
            android:id="@+id/tv_task_progress_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/pb_task_progress"
            app:layout_constraintBottom_toBottomOf="@id/pb_task_progress"
            app:layout_constraintLeft_toRightOf="@id/pb_task_progress"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toEndOf="@id/pb_task_progress"
            tools:text="25.00%"/>

        <TextView
            android:id="@+id/tv_task_download_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/pb_task_progress"
            app:layout_constraintBottom_toTopOf="parent"
            tools:text="Download: 523.15 KB Upload: 100.01 KB"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>